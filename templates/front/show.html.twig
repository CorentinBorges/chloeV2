{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/gallery.css') }}">
{% endblock %}

{% block body %}



        <div class="gallery container " id="gallery">
            {% for picture in pictures %}
                <div class=" pics animation all 2 mb-5  mt-5">
                    <button>  <img title='{{ picture.title }}' class="img-fluid image" id="{{ picture.id }}" src="{{ asset('images/'~ picture.fileName) }}" alt="{{ picture.alt }}"></button>
                </div>
            {% endfor %}
        </div>

            <div id='carousel-overlay'>

                <div id="carousel-window">
                    <button id="carousel-close" type="button" class="close-but close" aria-label="Close">
                        <span   aria-hidden="true">&times;</span>
                    </button>
                    <div id="carouselExampleIndicators" class="carousel slide " data-interval="false" data-ride="carousel" >

                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active">></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1" ></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                        </ol>
                        <div class="carousel-inner">
                            {% for picture in pictures %}
                                <div id="{{'pic' ~ picture.id}}" class="carousel-item">
                                    <img class="d-block w-100" src='{{ asset('images/'~ picture.fileName) }}' alt="{{picture.alt}}">
                                </div>
                            {% endfor %}

                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

       {% block javascripts %}
           {{ parent() }}
           <script src="{{ asset('js/carousel.js') }}"></script>
       {% endblock %}
{% endblock %}
