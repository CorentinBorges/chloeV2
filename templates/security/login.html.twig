{% extends 'base.html.twig' %}
{% block body %}
    {% if error %}
        <div class="alert-danger alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container">
        <form method="post">
            <div class="form-group" >
                <label for="login">Utilisateur</label>
                <input type="text" class="form-control" value='{{login}}' id="login" name='login' aria-describedby="emailHelp" placeholder="Nom d'utilisateur">
            </div>
            <div class="form-group">
                <label for="pass">Password</label>
                <input type="password" value='{{pass}}' class="form-control" id="pass" placeholder="Mot de pass" name='pass'>
            </div>
            <div class="form-check mb-4 ">
                <input type="checkbox" class="form-check-input" name='cookie' id="exampleCheck1" {{checked}}>
                <label class="form-check-label ml-2 "  for="exampleCheck1">Retenir mes informations</label>
            </div>
            <button type="submit" name="submit" class="btn btn-primary">Se connecter</button>
        </form>
    </div>
{% endblock %}