{% extends 'base_admin.html.twig' %}

{% block title %}Ajouter une ou mÃªme des images?{% endblock %}

{% block body %}
    <h2 class="text-center mt-5">Ajouter une image</h2>
    <div class="container justify-content-center mt-5">

        <div class="row row-cols-1 row-cols-md-12">

            <div class="col mb-4">
                <div class="card pt-4 pb-4">
                    <div class="container">
                        {{ form_start(form) }}

                            <div class="mt-3">
                                <ul class="images" data-prototype="{{ form_widget(form.images.vars.prototype)|e('html_attr') }}"></ul>
                            </div>

                            {% do form.images.setRendered %}

                            <button type="submit" class="btn btn-primary">Enregistrer les images</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/loadedFilesDisplayed.js') }}"></script>
    <script src="{{ asset('js/add-collection-image-widget.js') }}" ></script>
{% endblock %}